@model IEnumerable<UniversityManagementSystemMVCApp.Models.Course>
@{
    ViewBag.Title = "ViewCourseStatus";
}

<h2>View Course Status</h2>

<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    <div>
        <b>Select Department  </b>
        @Html.DropDownList("DepartmentId", null, "select Department", new { @class = "form-control" })
    </div>
}
<p><br /></p>
<div id="resultData">
            @Html.Partial("~/Views/Shared/_CourseStatus.cshtml")
   
   
</div>

<script type="text/javascript">
    function FillData(id) {
        $('#resultData').load('@Url.Action("CourseStatusLoad")', { departmentId: id });
    }

    $(function () {
        $('#DepartmentId').change(function () {
            var id = $('#DepartmentId').val();
            FillData(id);
        });
    });

</script>